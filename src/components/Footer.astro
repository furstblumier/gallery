---
import About from "./About.astro"
const { title, description } = Astro.props
const buttonClass="flex items-center justify-center text-sm md:text-base h-full px-4 hover:bg-[#242629] hover:scale-110 z-20"
---

<footer>
  <div class="bg-[#1F2224] border-t border-gray-900 flex z-20 h-14 w-full fixed inset-x-0 bottom-0 justify-between overflow-x-auto">
    <h1 class="flex items-center text-dark-gray-500 text-sm md:text-base uppercase justify-center h-full px-3 md:px-6 z-20">
      {title}
    </h1>
    <nav class="z-20">
      <ul class="flex items-center capitalize justify-center h-full object-contain z-20">
        <li class={buttonClass}>
          <a href="/"> SFW</a>
        </li>
        <li class={buttonClass}>
          <a href="/nsfw"> NSFW</a>
        </li>
        <li class={buttonClass}>
          <a href="https://blog.furst.blue"> Blog</a>
        </li>
        <li class={buttonClass+" md:pr-6 cursor-pointer"} data-dialog-target="about">
          <p>About</p>
        </li>
      </ul>
    </nav>
  </div>
  <About title={title} description={description} />
</footer>
